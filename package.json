{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "description": "This project is about enterprise level food order app",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "concurrently \"tsx --watch src/index.ts\" \"npm run stripe\"",
    "stripe": "stripe listen --forward-to localhost:7000/api/v1/order/checkout/webhook",
    "build": "npm install && npx tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "Food order app"
  ],
  "author": "Yel Yan",
  "license": "MIT",
  "dependencies": {
    "cloudinary": "^2.8.0",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-oauth2-jwt-bearer": "^1.7.1",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.2",
    "multer": "^2.0.2",
    "stripe": "^19.1.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
